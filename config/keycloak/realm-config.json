{
  "id": "stack-duka",
  "realm": "stack-duka",
  "enabled": true,
  "displayName": "Stack Duka",
  "displayNameHtml": "<div class=\"kc-logo-text\"><h1>Stack Duka</h1></div>",
  "accessTokenLifespan": 300,
  "accessCodeLifespan": 60,
  "ssoSessionIdleTimeout": 1800,
  "ssoSessionMaxLifespan": 36000,
  "clients": [
    {
      "clientId": "stack-duka-app",
      "enabled": true,
      "protocol": "openid-connect",
      "publicClient": false,
      "bearerOnly": false,
      "standardFlowEnabled": true,
      "implicitFlowEnabled": false,
      "directAccessGrantsEnabled": true,
      "serviceAccountsEnabled": true,
      "authorizationServicesEnabled": false,
      "redirectUris": [
        "http://localhost:3000/*",
        "http://localhost:5000/*",
        "http://localhost:10000/*"
      ],
      "webOrigins": [
        "http://localhost:3000",
        "http://localhost:5000",
        "http://localhost:10000"
      ],
      "attributes": {
        "access.token.lifespan": "300",
        "client.secret.creation.time": "1700000000",
        "client.secret": "stack-duka-secret-2026"
      },
      "defaultClientScopes": [
        "web-origins",
        "profile",
        "roles",
        "email"
      ],
      "optionalClientScopes": [
        "address",
        "phone",
        "offline_access",
        "microprofile-jwt"
      ]
    },
    {
      "clientId": "admin-console",
      "enabled": true,
      "publicClient": true,
      "baseUrl": "/admin/master/console/",
      "redirectUris": [
        "http://localhost:8080/admin/master/console/*"
      ]
    }
  ],
  "roles": {
    "realm": [
      {
        "name": "user",
        "description": "Standard user role"
      },
      {
        "name": "premium_user",
        "description": "Premium subscriber"
      },
      {
        "name": "admin",
        "description": "Administrator role"
      }
    ],
    "client": {
      "stack-duka-app": [
        {
          "name": "user",
          "description": "User scope"
        },
        {
          "name": "pro_user",
          "description": "Pro tier user"
        },
        {
          "name": "enterprise_user", 
          "description": "Enterprise tier user"
        }
      ]
    }
  },
  "users": [
    {
      "username": "admin",
      "enabled": true,
      "emailVerified": true,
      "email": "admin@stackduka.com",
      "firstName": "Admin",
      "lastName": "User",
      "credentials": [
        {
          "type": "password",
          "value": "admin123",
          "temporary": false
        }
      ],
      "realmRoles": ["admin"]
    }
  ],
  "components": {
    "org.keycloak.keys.KeyProvider": {
      "rsa-generated": [
        {
          "name": "rsa-generated",
          "priority": 100,
          "config": {
            "keyUse": ["sig"]
          }
        }
      ]
    }
  },
  "subscriptionTiers": {
    "free": {
      "name": "Free Tier",
      "price": 0,
      "features": ["Basic API access", "100 requests/day", "Community support"],
      "role": "user"
    },
    "starter": {
      "name": "Starter", 
      "price": 29,
      "features": ["Full API access", "10,000 requests/day", "Email support"],
      "role": "user"
    },
    "pro": {
      "name": "Professional",
      "price": 99,
      "features": ["Priority API", "100,000 requests/day", "24/7 support"],
      "role": "pro_user"
    },
    "enterprise": {
      "name": "Enterprise",
      "price": 299,
      "features": ["Unlimited", "Dedicated support", "Custom SLAs"],
      "role": "enterprise_user"
    }
  }
}
